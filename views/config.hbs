{{!-- config.hbs --}}
{{!< layout}}

<div class="text-center mb-4">
        <h3><strong>Configuration</strong></h3>
        <h3>&nbsp;</h3>
</div>
<div class="container mt-4">
    <h4>Create New Topic</h4>
    <form id="themeForm">
        <div class="mb-3">
            <label for="themeName" class="form-label">Topic Name:</label>
            <input type="text" class="form-control" id="themeName" name="themeName" required>
        </div>
        <div class="mb-3">
            <label for="themeType" class="form-label">Select File Type:</label>
            <select class="form-select" id="themeType" name="themeType">
                <option value="video">Video</option>
                <option value="audio">Audio</option>
                <option value="documents">Documents</option>
                <option value="images">Images</option>
                <option value="other">Other</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Create Topic</button>
    </form>
    <div id="messageBox" class="mt-3"></div>

    <h4 class="mt-4">Existing Topics</h4>
    <ul class="list-group" id="themesList">
        {{#each themes}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{this.name}}
            <button class="btn btn-danger btn-sm" onclick="deleteTheme('{{this.name}}')">Delete</button>
        </li>
        {{/each}}
    </ul>
</div>
<script src="/js/script_config.js"></script>
</div>

